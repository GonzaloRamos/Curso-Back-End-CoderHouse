extends ../index



block main
    include ../mixins/form
    include ../mixins/tableProduct
    h1 Desafio 4 PUG 
    hr

    if (mostrarProductos)
        div.container
            div 
                h2 Productos
            table.table 
                thead
                    tr
                        th(scope="col") #
                        th(scope="col") Nombre
                        th(scope="col") Precio
                        th(scope="col") Imagen
                tbody 

                    each producto in productos
                        +tableProduct(producto.title, producto.thumbnail, producto.price, producto.id)

            a(href="/").btn.btn-primary.m-3 Volver al inicio
    else                    
        div.container
            div 
                h2 Ingresa un producto
            +form
            a(href="/productos").btn.btn-primary.m-3 Mostrar Productos 

